<%- include("../partials/header") %>

<div class="d-flex">
    <%- include("../partials/lecturer-sidebar") %>
    
    <div class="main-content flex-grow-1">
        <div class="container-fluid py-4">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">All Student Results</h1>
                    <p class="text-muted">Manage and view all student assessment results</p>
                </div>
                <div class="btn-group">
                    <button class="btn btn-primary" onclick="LecturerModule.results.exportAllResults(pdf)">
                        <i class="bi bi-download me-1"></i>Download PDF
                    </button>
                    <button class="btn btn-outline-primary" onclick="LecturerModule.results.exportAllResults(csv)">
                        <i class="bi bi-file-earmark-spreadsheet me-1"></i>Export CSV
                    </button>
                </div>
            </div>

            <!-- Filters and Search -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Search Results</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" class="form-control" id="resultSearch" placeholder="Search by student, assessment, or course...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Course</label>
                            <select class="form-select result-filter" name="course">
                                <option value="">All Courses</option>
                                <% if (typeof courses !== 'undefined' && courses.length > 0) { %>
                                    <% courses.forEach(course => { %>
                                        <option value="<%= course.id %>"><%= course.name %> (<%= course.code %>)</option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Assessment</label>
                            <select class="form-select result-filter" name="assessment">
                                <option value="">All Assessments</option>
                                <% if (typeof assessments !== 'undefined' && assessments.length > 0) { %>
                                    <% assessments.forEach(assessment => { %>
                                        <option value="<%= assessment.id %>"><%= assessment.title %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button class="btn btn-outline-secondary w-100" onclick="LecturerModule.results.clearFilters()">
                                <i class="bi bi-x-circle me-1"></i>Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Results Table -->
            <div class="card border-0 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-clipboard-data me-2"></i>Student Results List
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="allResultsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Student Name</th>
                                    <th>Assessment</th>
                                    <th>Course</th>
                                    <th>Score</th>
                                    <th>Grade</th>
                                    <th>Status</th>
                                    <th>Submitted On</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof results !== 'undefined' && results.length > 0) { %>
                                    <% results.forEach(result => { %>
                                        <tr>
                                            <td><%= result.student_name %></td>
                                            <td><%= result.assessment_title %></td>
                                            <td><%= result.course_name %></td>
                                            <td><%= result.score %> / <%= result.max_score %></td>
                                            <td><span class="badge bg-<%= result.grade_color %>"><%= result.grade %></span></td>
                                            <td><%= result.status %></td>
                                            <td><%= new Date(result.submitted_at).toLocaleString() %></td>
                                            <td>
                                                <a href="/lecturer/results/edit/<%= result.id %>" class="btn btn-sm btn-outline-primary me-1" title="Edit Result">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger" title="Delete Result" onclick="LecturerModule.results.deleteResult('<%= result.id %>')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="8" class="text-center py-4">
                                            <i class="bi bi-exclamation-circle display-4 text-muted mb-3"></i>
                                            <p class="text-muted">No student results available.</p>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <nav aria-label="Results pagination" class="mt-3">
                        <ul class="pagination justify-content-center" id="resultsPagination">
                            <!-- Pagination will be generated here -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Add any specific styles for this page here */
</style>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        LecturerModule.results.initAllResultsPage();
    });
</script>

<%- include("../partials/footer") %>

