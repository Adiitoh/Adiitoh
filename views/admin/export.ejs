<%- include("../partials/header") %>

<div class="d-flex">
    <%- include("../partials/admin-sidebar") %>    
    <div class="main-content flex-grow-1">
        <div class="container-fluid py-4">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Data Export</h1>
                    <p class="text-muted">Export system data in various formats</p>
                </div>
            </div>

            <!-- Export Options -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-download me-2"></i>Select Data to Export
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="export-option card h-100 text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-people display-4 text-primary mb-3"></i>
                                    <h5 class="card-title">User Data</h5>
                                    <p class="card-text">Export all user information, including roles and approval status.</p>
                                    <button class="btn btn-primary mt-3" onclick="AdminModule.export.exportData('users')">
                                        <i class="bi bi-download me-1"></i>Export Users
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="export-option card h-100 text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-book display-4 text-success mb-3"></i>
                                    <h5 class="card-title">Course Data</h5>
                                    <p class="card-text">Download details of all courses, including assigned lecturers.</p>
                                    <button class="btn btn-success mt-3" onclick="AdminModule.export.exportData('courses')">
                                        <i class="bi bi-download me-1"></i>Export Courses
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="export-option card h-100 text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-clipboard-check display-4 text-warning mb-3"></i>
                                    <h5 class="card-title">Assessment Data</h5>
                                    <p class="card-text">Get a comprehensive export of all assessments and their questions.</p>
                                    <button class="btn btn-warning mt-3" onclick="AdminModule.export.exportData('assessments')">
                                        <i class="bi bi-download me-1"></i>Export Assessments
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="export-option card h-100 text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-bar-chart display-4 text-info mb-3"></i>
                                    <h5 class="card-title">Result Data</h5>
                                    <p class="card-text">Export all student results and performance records.</p>
                                    <button class="btn btn-info mt-3" onclick="AdminModule.export.exportData('results')">
                                        <i class="bi bi-download me-1"></i>Export Results
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="export-option card h-100 text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-file-earmark-text display-4 text-danger mb-3"></i>
                                    <h5 class="card-title">Audit Logs</h5>
                                    <p class="card-text">Download system audit trails for security and compliance.</p>
                                    <button class="btn btn-danger mt-3" onclick="AdminModule.export.exportData('audit_logs')">
                                        <i class="bi bi-download me-1"></i>Export Logs
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="export-option card h-100 text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-database display-4 text-secondary mb-3"></i>
                                    <h5 class="card-title">Full Database Backup</h5>
                                    <p class="card-text">Generate a complete SQL dump of the entire database.</p>
                                    <button class="btn btn-secondary mt-3" onclick="AdminModule.export.exportData('full_db')">
                                        <i class="bi bi-download me-1"></i>Export Full DB
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.export-option {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.export-option:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}
</style>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Any specific JS for this page
    });
</script>

