<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= appName %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Chart.js for student performance charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Theme System CSS -->
    <link rel="stylesheet" href="/css/themes.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <meta name="description" content="Student Assessment and Performance Tracker - Manage courses, assessments, and track student performance">
    <meta name="keywords" content="student, assessment, tracker, education, performance, grades">
    <meta name="author" content="Student Assessment Tracker">
</head>
<body>
    <!-- Navigation Bar -->
    <% if (typeof showNavbar === 'undefined' || showNavbar !== false) { %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-mortarboard-fill me-2"></i>
                <%= appName %>
            </a>

            <!-- Mobile Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <% if (user) { %>
                        <% if (user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/admin/dashboard') ? 'active' : '' %>" href="/admin/dashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/admin/users') ? 'active' : '' %>" href="/admin/users">
                                    <i class="bi bi-people me-1"></i>Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/admin/courses') ? 'active' : '' %>" href="/admin/courses">
                                    <i class="bi bi-book me-1"></i>Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/admin/pending-approvals') ? 'active' : '' %>" href="/admin/pending-approvals">
                                    <i class="bi bi-clock-history me-1"></i>Approvals
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/admin/reports') ? 'active' : '' %>" href="/admin/reports">
                                    <i class="bi bi-graph-up me-1"></i>Reports
                                </a>
                            </li>
                        <% } else if (user.role === 'lecturer') { %>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/lecturer/dashboard') ? 'active' : '' %>" href="/lecturer/dashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/lecturer/assessments') ? 'active' : '' %>" href="/lecturer/assessments">
                                    <i class="bi bi-clipboard-check me-1"></i>Assessments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/lecturer/results') ? 'active' : '' %>" href="/lecturer/results">
                                    <i class="bi bi-bar-chart me-1"></i>Results
                                </a>
                            </li>
                        <% } else if (user.role === 'student') { %>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/student/dashboard') ? 'active' : '' %>" href="/student/dashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/student/courses') ? 'active' : '' %>" href="/student/courses">
                                    <i class="bi bi-book me-1"></i>My Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/student/results') ? 'active' : '' %>" href="/student/results">
                                    <i class="bi bi-trophy me-1"></i>My Results
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= currentPath.startsWith('/student/analytics') ? 'active' : '' %>" href="/student/analytics">
                                    <i class="bi bi-graph-up me-1"></i>Analytics
                                </a>
                            </li>
                        <% } %>
                    <% } %>
                </ul>

                <!-- User Menu -->
                <ul class="navbar-nav">
                    <% if (user) { %>
                         <!-- Theme Toggle -->
                        <li class="nav-item dropdown position-relative me-2">
                            <button class="theme-toggle nav-link border-0 bg-transparent" type="button" title="Change theme">
                                <i class="fas fa-adjust"></i>
                            </button>
                            <div class="theme-dropdown">
                                <button class="theme-dropdown-item" data-theme="light">
                                    <i class="fas fa-sun"></i>
                                    Light
                                </button>
                                <button class="theme-dropdown-item" data-theme="dark">
                                    <i class="fas fa-moon"></i>
                                    Dark
                                </button>
                                <button class="theme-dropdown-item" data-theme="auto">
                                    <i class="fas fa-adjust"></i>
                                    Auto
                                </button>
                            </div>
                        </li>
                        
                        <!-- Notifications -->
                        <li class="nav-item dropdown">
                            <a class="nav-link position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-bell"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-badge d-none">
                                    0
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown" style="width: 300px;">
                                <li><h6 class="dropdown-header">Notifications</h6></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="notification-list">
                                    <div class="text-center p-3 text-muted">
                                        <i class="bi bi-bell-slash"></i>
                                        <p class="mb-0 small">No new notifications</p>
                                    </div>
                                </li>
                            </ul>
                        </li>

                        <!-- User Profile Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <div class="user-avatar me-2">
                                    <% if (user.profile_image_url) { %>
                                        <img src="<%= user.profile_image_url %>" alt="Profile" class="rounded-circle" width="32" height="32">
                                    <% } else { %>
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                            <i class="bi bi-person-fill text-white"></i>
                                        </div>
                                    <% } %>
                                </div>
                                <span class="d-none d-md-inline">
                                    <%= user.first_name %> <%= user.last_name %>
                                    <small class="text-light opacity-75 d-block"><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></small>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <div class="dropdown-header">
                                        <strong><%= user.first_name %> <%= user.last_name %></strong>
                                        <br>
                                        <small class="text-muted"><%= user.email %></small>
                                        <% if (user.student_id) { %>
                                            <br>
                                            <small class="text-muted">ID: <%= user.student_id %></small>
                                        <% } %>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/auth/profile">
                                        <i class="bi bi-person me-2"></i>My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="document.getElementById('logoutForm').submit();">
                                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/register">
                                <i class="bi bi-person-plus me-1"></i>Register
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <% } %>

    <!-- Flash Messages -->
    <% if (messages && (messages.success || messages.error || messages.info || messages.warning)) { %>
        <script id="flash-messages" type="application/json">
            <%- JSON.stringify(messages) %>
        </script>
    <% } %>

    <!-- Hidden Logout Form -->
    <% if (user) { %>
        <form id="logoutForm" action="/auth/logout" method="POST" style="display: none;">
        </form>
    <% } %>

    <!-- Main Content Container -->
    <main class="main-content">

